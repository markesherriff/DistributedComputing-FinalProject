@model Tyme.Models.User
<script src="https://apis.google.com/js/platform.js" async defer>
</script>
<meta name="google-signin-client_id" content=@ViewData["googleClientId"]>

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Clients_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <h2>Login &nbsp;<button type="submit" name="Google" id="Google" style="border: 0.5px solid black;" class="btn"><img src="~/Content/GoogleIcon.png" style="margin-right:5px;" width="25" height="25" /> Sign in with Google</button></h2>
    </div>
} 

<table class="table">
    <tr>
        <td>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <br />
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", required = true } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password", required = true } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Login" name="Login" id="Login" class="btn btn-primary" /> &nbsp;
                            @Html.ActionLink("Forgot Password", "ForgotPassword") |
                            @Html.ActionLink("Register", "Register")
                        </div>
                    </div>
                </div>
            }
        </td>
    </tr>
</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
